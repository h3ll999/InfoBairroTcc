<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/login_edt_email"
        android:id="@+id/login_edt_senha"
        android:hint="Senha" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/login_edt_email"
        android:layout_above="@+id/login_edt_senha"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:hint="Email" />

    <Button
        android:text="Cadastrar Novo Usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_btn_cadastrar"
        android:layout_alignBottom="@+id/login_btn_login"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:id="@+id/login_btn_login"
        android:layout_below="@+id/login_edt_senha"
        android:layout_alignStart="@+id/login_edt_senha" />
</RelativeLayout>