<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/menu_inicial_layout_adapter"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Título"
            android:textSize="20sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@+id/menu_inicial_img_foto_usuario"
            android:id="@+id/menu_inicial_txv_titulo_postagem"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Conteúdo"
            android:maxLines="5"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@+id/menu_inicial_img_foto_usuario"
            android:layout_below="@+id/menu_inicial_txv_titulo_postagem"
            android:id="@+id/menu_inicial_txv_conteudo_postagem"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome"
            android:gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            android:layout_below="@id/menu_inicial_txv_conteudo_postagem"
            android:id="@+id/menu_inicial_txv_nome_usuario_postagem"
            android:layout_toEndOf="@+id/menu_inicial_img_foto_usuario" />

        <de.hdodenhof.circleimageview.CircleImageView
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/menu_inicial_img_foto_usuario"
            android:layout_marginLeft="16dp"
            android:layout_width="70dp"
            android:layout_marginTop="16dp"
            android:layout_alignParentStart="true"
            android:layout_height="70dp" />

        <TextView
            android:id="@+id/menu_inicial_txv_categoria_postagem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categoria"
            android:layout_marginLeft="16dp"
            android:layout_alignBaseline="@+id/menu_inicial_txv_nome_usuario_postagem"
            android:layout_alignBottom="@+id/menu_inicial_txv_nome_usuario_postagem"
            android:layout_alignEnd="@+id/menu_inicial_txv_conteudo_postagem" />

        <!-- TODO Recyclerview assassino -->

        <ImageView
            android:id="@+id/menu_inicial_img_foto_postagem"
            android:background="@drawable/placeholder_img_vazia"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_below="@+id/menu_inicial_txv_categoria_postagem" />

        <TextView
            android:id="@+id/menu_inicial_txv_foto_postagem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:layout_alignStart="@+id/menu_inicial_img_foto_postagem"
            android:layout_alignEnd="@+id/menu_inicial_img_foto_postagem"
            android:layout_alignBottom="@+id/menu_inicial_img_foto_postagem"
            android:gravity="right" />

        <!--
        android:elevation="5dp"
            android:outlineProvider="bounds"
        -->

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#a9a9a9"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_below="@+id/menu_inicial_img_foto_postagem"/>

    </RelativeLayout>

</RelativeLayout>