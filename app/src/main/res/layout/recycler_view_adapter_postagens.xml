<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="#ff0000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/menu_inicial_img_foto_usuario"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ATIREI O PAU NO GATO"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/menu_inicial_img_foto_usuario"
            android:id="@+id/menu_inicial_txv_titulo_postagem"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="E o gato morreu"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/menu_inicial_img_foto_usuario"
            android:layout_below="@+id/menu_inicial_txv_titulo_postagem"
            android:id="@+id/menu_inicial_txv_conteudo_postagem"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JosÃ©"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="16dp"
            android:layout_below="@+id/menu_inicial_img_foto_usuario"
            android:id="@+id/menu_inicial_txv_nome_usuario_postagem"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categoria"
            android:layout_marginLeft="16dp"
            android:layout_below="@+id/menu_inicial_txv_nome_usuario_postagem"

            android:id="@+id/menu_inicial_txv_categoria_postagem"
            android:layout_alignParentBottom="false"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</RelativeLayout>